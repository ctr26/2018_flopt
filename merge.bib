  langid       = {english},
  number       = {5},
  pages        = {1416--1421},
  shortjournal = {Proc. Natl. Acad. Sci. U.S.A.},
  title        = {Direct Laser Manipulation Reveals the Mechanics of Cell Contacts in Vivo},
