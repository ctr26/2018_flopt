  pages        = {8847--8860},
  shortjournal = {J Virol},
  title        = {Herpes {{Simplex Virus Type}} 1 {{Capsids Transit}} by the Trans-{{Golgi Network}}, {{Where Viral Glycoproteins Accumulate Independently}} of {{Capsid Egress}}},
