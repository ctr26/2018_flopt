  issn         = {1553-7374},
  journaltitle = {PLOS Pathogens},
  keywords     = {Fluorescence microscopy,Exocytosis,Fluorescence imaging,Cell membranes,Virions,Membrane proteins,Vesicles,Viral packaging},
  langid       = {english},
