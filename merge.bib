  journaltitle = {The Biochemical Journal},
  keywords     = {Animals,Humans,Cell Movement,Actins,rho-Associated Kinases,Actin Cytoskeleton,Contractile Proteins,Filamins,GTPase-Activating Proteins,Microfilament Proteins,rac1 GTP-Binding Protein,rhoA GTP-Binding Protein},
