
@article{arranzHelicalOpticalProjection2013,
  title = {Helical Optical Projection Tomography},
  author = {Arranz, Alicia and Dong, Di and Zhu, Shouping and Rudin, Markus and Tsatsanis, Christos and Tian, Jie and Ripoll, Jorge},
