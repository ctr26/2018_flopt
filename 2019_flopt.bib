  author = {Zhang, Hanqing and Zhang, Hanqing and Waldmann, Laura and Manuel, Remy and Boije, Henrik and Haitina, Tatjana and Allalou, Amin and Allalou, Amin},
  date = {2020-08-01},
  journaltitle = {Biomedical Optics Express},
  shortjournal = {Biomed. Opt. Express, BOE},
  volume = {11},
  pages = {4290--4305},
